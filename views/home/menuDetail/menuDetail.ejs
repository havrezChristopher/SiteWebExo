<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- '<style>' + include(`../style/style.css`) + '</style>' %>
        <title>🍔 ***MenuDetail*** 🍔</title>
</head>

<body>
    <nav>
        <div class="logo">
            <a href="#">Mon Logo</a>
        </div>
        <ul class="menu">
            <li><a href="/acceuil">Accueil</a></li>
            <li><a href="/menu">Nos Burger</a></li>
            <li><a href="/">Commentaire</a></li>
            <li><a href="/message-add">Ajouter un Message</a></li>
            <li><a href="/pageInfo">Contact</a></li>
        </ul>
    </nav>
    <% MenuDetailSql.forEach (me=> { %>
        <legend>
            <h1>🍔*** <%= me.Nom %>***🍔</h1>
        </legend>

        <ul>
            <li>
                <%= me.ID %>
                    <%= me.Nom %>
                        <br>
                        <img src='data:images/jpeg;base64, <%= Images %>' alt="Hamburger"><br>
                        <%= me.Description%><br>
                            <%= me.BreveDescription %><br>
                                <%= me.Allergenes %><br>
                                    <%= me.Prix %><br>
                                        <!-- <a href="menu?ID=<%= me.ID %>" ><%= me.Nom %></a>  -->
            </li>
        </ul>
        <% })%>

</body>

</html>